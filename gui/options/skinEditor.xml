<UI xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Script file="SkinEditor.lua" /> 

	<!--
		This XML file defines the edit skin GUI. It is accessable through a button in the GUI part of DTM option panels.
	-->

	<CheckButton name="DTM_SkinEditor_CheckButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="26" y="26"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlight" justifyV="CENTER">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="0" y="1"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				if ( self:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOn");
				else
					PlaySound("igMainMenuOptionCheckBoxOff");
				end
				DTM_SkinEditor_CheckButton_OnClick(self, button);
			</OnClick>
			<OnEnter>
				if ( self.tooltipText ) then
					GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
					GameTooltip:SetText(self.tooltipText, nil, nil, nil, nil, 1);
				end
				if ( self.tooltipRequirement ) then
					GameTooltip:AddLine(self.tooltipRequirement, "", 1.0, 1.0, 1.0);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
		<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
	 	<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>		
	</CheckButton>
	<Slider name="DTM_SkinEditor_SliderTemplate" orientation="HORIZONTAL" virtual="true" enableMouse="true">
		<Size>
			<AbsDimension x="144" y="17"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-10" bottom="-10"/>
		</HitRectInsets>
		<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="8"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="6" bottom="6"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="8" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLow" inherits="GameFontNormalSmall" text="LOW">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="-4" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentHigh" inherits="GameFontNormalSmall" text="HIGH">
					<Anchors>
						<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="4" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentValue" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnValueChanged>
				DTM_SkinEditor_Slider_OnValueChanged(self);
			</OnValueChanged>
			<OnEnter>
				if ( self.tooltipText ) then
					GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
					GameTooltip:SetText(self.tooltipText, nil, nil, nil, nil, 1);
				end
				if ( self.tooltipRequirement ) then
					GameTooltip:AddLine(self.tooltipRequirement, "", 1.0, 1.0, 1.0);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
			<Size>
				<AbsDimension x="32" y="32"/>
			</Size>
		</ThumbTexture>
	</Slider>
	<Frame name="DTM_SkinEditor_DropDownTemplate" inherits="UIDropDownMenuTemplate" virtual="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentCaption" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="-8" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	<EditBox name="DTM_SkinEditor_EditBoxTemplate" autoFocus="false" inherits="InputBoxTemplate" virtual="true">
		<Size>
			<AbsDimension x="128" y="16"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="8" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnHide>
				DTM_SkinEditor_EditBox_ValidateValue(self);
			</OnHide>
			<OnEditFocusLost>
				DTM_SkinEditor_EditBox_ValidateValue(self);
			</OnEditFocusLost>
			<OnEnterPressed>
				DTM_SkinEditor_EditBox_ValidateValue(self);
				self:ClearFocus();
			</OnEnterPressed>
			<OnEnter>
				if ( self.tooltipText ) then
					GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
					GameTooltip:SetText(self.tooltipText, nil, nil, nil, nil, 1);
				end
				if ( self.tooltipRequirement ) then
					GameTooltip:AddLine(self.tooltipRequirement, "", 1.0, 1.0, 1.0);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<FontString inherits="ChatFontNormal" bytes="128"/>
	</EditBox>

	<CheckButton name="DTM_SkinEditor_ColumnEditor_CheckButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="26" y="26"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlight" justifyV="CENTER">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="0" y="1"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				if ( self:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOn");
				else
					PlaySound("igMainMenuOptionCheckBoxOff");
				end
				DTM_SkinEditor_ColumnEditor_OnPropertyChange(self:GetParent(), self);
			</OnClick>
		</Scripts>
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
		<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
	 	<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>		
	</CheckButton>
	<Slider name="DTM_SkinEditor_ColumnEditor_SliderTemplate" orientation="HORIZONTAL" virtual="true" enableMouse="true">
		<Size>
			<AbsDimension x="80" y="17"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-10" bottom="-10"/>
		</HitRectInsets>
		<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="8"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="6" bottom="6"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentValue" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnValueChanged>
				if type(self.format) == "function" then
				    getglobal(self:GetName().."Value"):SetText(self.format(self:GetValue()));
				else
				    getglobal(self:GetName().."Value"):SetText("");
				end
				DTM_SkinEditor_ColumnEditor_OnPropertyChange(self:GetParent(), self);
			</OnValueChanged>
		</Scripts>
		<ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
			<Size>
				<AbsDimension x="32" y="32"/>
			</Size>
		</ThumbTexture>
	</Slider>
	<Frame name="DTM_SkinEditor_ColumnEditorTemplate" virtual="true">
		<Size>
			<AbsDimension x="384" y="40"/>
		</Size>

		<!--
		<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="8"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="6" bottom="6"/>
			</BackgroundInsets>
		</Backdrop>
		-->

		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="GameFontHighlight">
					<Size>
						<AbsDimension x="80" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent">
							<Offset>
								<AbsDimension x="8" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentEnabled" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="112" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentPosition" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="200" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentJustification" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="320" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<CheckButton name="$parent_EnabledCheckButton" inherits="DTM_SkinEditor_ColumnEditor_CheckButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="112" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.property = "enabled";
						self.type = "BOOLEAN";
						getglobal(self:GetName().."Text"):SetText("");
					</OnLoad>
				</Scripts>
			</CheckButton>
			<Slider name="$parent_PositionSlider" inherits="DTM_SkinEditor_ColumnEditor_SliderTemplate">
				<Anchors>
					<Anchor point="CENTER" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="200" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.property = "offset";
						self.type = "NUMBER";
						self:SetMinMaxValues(0, 1);
						self:SetValueStep(0.01);
						self.format = function(value) return tostring(math.floor(value*100+0.5)).."%"; end
					</OnLoad>
				</Scripts>
			</Slider>
			<CheckButton name="$parent_JustifyCenter" inherits="DTM_SkinEditor_ColumnEditor_CheckButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="320" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.property = "justification";
						self.type = "GENERAL";
						self.value = "CENTER";
						getglobal(self:GetName().."Text"):SetText(DTM_Localise("CenterShort"));
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_JustifyLeft" inherits="DTM_SkinEditor_ColumnEditor_CheckButtonTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parent_JustifyCenter" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="-16" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.property = "justification";
						self.type = "GENERAL";
						self.value = "LEFT";
						getglobal(self:GetName().."Text"):SetText(DTM_Localise("LeftShort"));
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_JustifyRight" inherits="DTM_SkinEditor_ColumnEditor_CheckButtonTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_JustifyCenter" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="16" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.property = "justification";
						self.type = "GENERAL";
						self.value = "RIGHT";
						getglobal(self:GetName().."Text"):SetText(DTM_Localise("RightShort"));
					</OnLoad>
				</Scripts>
			</CheckButton>
		</Frames>

		<Scripts>
			<OnLoad>
				-- self:SetBackdropBorderColor(0.5, 0.5, 0.5);
				-- self:SetBackdropColor(0.3, 0.3, 0.3);
				DTM_SkinEditor_ColumnEditor_OnLoad(self);
			</OnLoad>
		</Scripts>
	</Frame>

	<Frame name="DTM_SkinEditor_CategoryFrameTemplate" virtual="true">
		<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="8"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="6" bottom="6"/>
			</BackgroundInsets>
		</Backdrop>

		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parent_TitleTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parent_TitleText" inherits="GameFontNormal">
					<Size>
						<AbsDimension x="256" y="16"/>
					</Size>

					<Anchors>
						<Anchor point="TOP" relativeTo="$parent_TitleTexture">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad>
				self:SetBackdropBorderColor(0.5, 0.5, 0.5);
				self:SetBackdropColor(0.3, 0.3, 0.3);
			</OnLoad>
		</Scripts>
	</Frame>

	<Frame name="DTM_SkinEditor" parent="UIParent" frameStrata="HIGH" topLevel="true" hidden="true">
		<!--
			This frame is highly variable. It will expend/resize as more categories are added to the skin schema.
		-->

		<Size>
			<AbsDimension x="512" y="512"/>
		</Size>

		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>

		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>

		<Frames>
			<Button name="DTM_SkinEditor_TestList" inherits="DTM_ThreatListFrameTemplate"/>
			<Button name="DTM_SkinEditor_PreviewButton" inherits="OptionsButtonTemplate">
				<Size>
					<AbsDimension x="128" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="16" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						DTM_SkinEditor_PreviewButton_OnClick();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="DTM_SkinEditor_FinishButton" inherits="OptionsButtonTemplate">
				<Size>
					<AbsDimension x="128" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-16" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						DTM_SkinEditor:FinishEdit();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="DTM_SkinEditor_PrevButton">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="-72" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PlaySound("igMainMenuOptionCheckBoxOn");
					      DTM_SkinEditor_Move(-1);
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Down"/>
				<DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Disabled"/>
				<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
			</Button>
			<Button name="DTM_SkinEditor_NextButton">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="72" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PlaySound("igMainMenuOptionCheckBoxOn");
					      DTM_SkinEditor_Move(1);
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
				<DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Disabled"/>
				<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
			</Button>
		</Frames>

		<Layers>
			<Layer level="ARTWORK">
				<Texture name="DTM_SkinEditor_TitleTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="DTM_SkinEditor_TitleText" inherits="GameFontNormal">
					<Size>
						<AbsDimension x="256" y="16"/>
					</Size>

					<Anchors>
						<Anchor point="TOP" relativeTo="DTM_SkinEditor_TitleTexture">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="DTM_SkinEditor_CategoryText" inherits="GameFontNormal">
					<Size>
						<AbsDimension x="256" y="16"/>
					</Size>

					<Anchors>
						<Anchor point="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="16"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad>
				DTM_SkinEditor_OnLoad(self);
			</OnLoad>
		</Scripts>
	</Frame>
</UI>